<div class="new-post-container">
    <h2>Create New Post</h2>
    <form id="new-post-form">
        <div class="form-group">
            <label for="post-title">Title:</label>
            <input type="text" id="post-title" name="title" placeholder="Enter post title" required>
        </div>
        <div class="form-group">
            <label for="post-content">Content:</label>
            <textarea id="post-content" name="content" rows="4" placeholder="Enter post content" required></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn" id="new-post-btn">Create Post</button>
        </div>
    </form>
</div>

<script src="/js/addPost.js"></script>